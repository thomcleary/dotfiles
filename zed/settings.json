// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "assistant": {
    "version": "2",
    "button": false
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "buffer_font_size": 14,
  "chat_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "cursor_blink": false,
  "cursor_shape": "block",
  "experimental.theme_overrides": {
    "editor.document_highlight.read_background": "#74ade83d",
    "players": [{ "cursor": "#a4a9b4" }]
  },
  "features": {
    "inline_completion_provider": "none"
  },
  "file_types": {
    "YAML": ["clangd"]
  },
  "format_on_save": "on",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "gutter": {
    "folds": false,
    "runnables": false,
    "code_actions": false
  },
  "languages": {
    "C": {
      "formatter": "language_server",
      "tab_size": 2
    }
  },
  "lsp": {
    "clangd": {
      "binary": {
        "path": "/usr/bin/clangd",
        "arguments": ["--function-arg-placeholders=0"]
      }
    }
  },
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "terminal": {
    "dock": "bottom",
    "font_family": "FiraCode Nerd Font Mono",
    "working_directory": "current_project_directory"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark Pro"
  },
  "ui_font_size": 14
}
